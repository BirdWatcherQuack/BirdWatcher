<div class="container">
  <div class="forms-container">
    <div class="signin-signup">
      <form action="#" class="sign-in-form">
        <h2 class="title">Sign in</h2>
        <div class="input-field">
          <i class="fas fa-user"></i>
          <input id="username-login" type="text" placeholder="Username" required />
        </div>
        <div class="input-field">
          <i class="fas fa-lock"></i>
          <input id="password-login" type="password" placeholder="Password" />
        </div>
        <input type="submit" value="Login" class="btn solid" />
        <a href="/forgot">Forgot Password?</a>
        <p class="social-text">Or Sign in with social platforms</p>
        <div class="social-media">
          <a onclick="logIn()" class="social-icon">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a onclick="#" class="social-icon">
            <i class="fab fa-twitter"></i>
          </a>
          <a onclick="#" class="social-icon">
            <i class="fab fa-google"></i>
          </a>
          <a onclick="#" class="social-icon">
            <i class="fab fa-linkedin-in"></i>
          </a>
        </div>
      </form>
      <form action="#" class="sign-up-form" id="form">
        <h2 class="title">Sign up</h2>
        <h4 id="error"></h4>
        <div class="input-field">
          <i class="fas fa-user"></i>
          <input class="name" id="username-signup" type="text" required placeholder="Username" />
        </div>
        <div class="input-field">
          <i class="fas fa-envelope"></i>
          <input class="email" id="email-signup" type="email" placeholder="Email" required />
        </div>
        <div class="input-field">
          <i class="fas fa-lock"></i>
          <input class="password" id="password-signup" type="password" placeholder="Password" required />
        </div>
        <input type="submit" class="btn" value="Sign up" />
        <p class="social-text">Or Sign up with social platforms</p>
        <div class="social-media">
          <a href="https://connect.facebook.net/en_US/sdk.js" class="social-icon">
            <i id="facebook" class="fab fa-facebook-f"></i>
          </a>
          <a href="#" class="social-icon">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="social-icon">
            <i class="fab fa-google"></i>
          </a>
          <a href="#" class="social-icon">
            <i class="fab fa-linkedin-in"></i>
          </a>
        </div>
      </form>
    </div>
  </div>

  <div class="panels-container">
    <div class="panel left-panel">
      <div class="content">
        <h2>New Here?</h2>
        <p>
          <b>QUACK</b> will help to discover an incredible world of birds around you.
        </p>
        <button onclick="play()" class="btn transparent" id="sign-up-btn">
          Sign up
        </button>
        <audio id="audio" src="/sounds/duck_sound.mp4"></audio>
      </div>
      <img src="/images/duck_left.png" class="image" alt="" />
    </div>
    <div class="panel right-panel">
      <div class="content">
        <h2>One of Us?</h2>
        <p>
          Welcome back to <b>QUACK</b>!
        </p>
        <button onclick="play()" class="btn transparent" id="sign-in-btn">
          Sign in
        </button>
        <audio id="audio" src="/sounds/duck_sound.mp4"></audio>
      </div>
      <img src="/images/duck_right.png" class="image" alt="" />
    </div>
  </div>
</div>

<script src="/js/login.js"></script>
<script src="/js/facebook.js"></script>